<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-padding: 10;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.db.ManageUsers">
    <TableView fx:id="usersTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colUserID" text="User ID" />
            <TableColumn fx:id="colName" prefWidth="150" text="Name" />
            <TableColumn fx:id="colEmail" prefWidth="200" text="Email" />
            <TableColumn fx:id="colContactNumber" prefWidth="150" text="Contact Number" />
         </columns>
    </TableView>

    <HBox spacing="10">
         <Button fx:id="deleteButton" text="Delete" />
        <Button fx:id="refreshButton" text="Refresh" />
      <Button fx:id="backbt" mnemonicParsing="false" text="Back" />
    </HBox>
</VBox>
